set font "inconsolata 12"
set sandbox none                    # Fix some weird link issue
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set guioptions v
set window-title-page               # Display page number
set window-title-basename           # Display just the file name
# set statusbar-basename            # Display just the file name

set default-bg '#1d2021'

unmap r
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r recolor
map R rotate
map b toggle_statusbar
map <C-j> zoom out
map <C-k> zoom in
