{
    // "breadcrumbs.enabled": false,
    "editor.fontFamily": "'JetBrainsMono Nerd Font'",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.glyphMargin": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.rulers": [80],
    "editor.wordWrap": "on",
    "explorer.compactFolders": false,
    "terminal.integrated.fontSize": 15,
    "window.commandCenter": false,
    "window.density.editorTabHeight": "compact",
    "window.title": " ",
    "workbench.activityBar.location": "hidden",
    "workbench.activityBar.orientation": "vertical",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    // VIM plugin
    "vim.highlightedyank.duration": 150,
    "vim.highlightedyank.enable": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindings": [  
        { "before": ["Y"], "after": ["y", "$"] },
        { "before": ["[", "b"], "commands": ["workbench.action.previousEditor"] },
        { "before": ["]", "b"], "commands": ["workbench.action.nextEditor"] },
        { "before": ["K"], "commands": ["editor.action.showHover"] },
        { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
        { "before": ["<space>", "b", "d"], "commands": ["workbench.action.closeActiveEditor"] },
        { "before": ["<space>", "b", "u"], "commands": ["workbench.action.reopenClosedEditor"] },
        { "before": ["<space>", "r", "n"], "commands": ["editor.action.rename"] }
    ],
    "vim.visualModeKeyBindings": [
        { "before": [">"], "after": [">", "g", "v"] },
        { "before": ["<"], "after": ["<", "g", "v"] }
    ],
    "workbench.colorTheme": "One Dark Pro Darker",
    "editor.formatOnSave": true,
}